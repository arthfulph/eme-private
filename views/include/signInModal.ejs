<!-- Signup Modal -->
<div id="signinModal" class="modal">
    <div class="modal-content">
        <span id="closeInModalBtn" class="close">&times;</span>
        <h2>Login</h2>
        <p style="color: white;">
        <p>Type the login details provided in your email, if you didn't received any email 24 hours
            after your payment, please contact support. <u>arthful.productions@gmail.com</u>
        </p> </p>
        <form id="signInForm">
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" id="inEmail" name="email" required>
                <p class="error" id="inemailError"></p>

            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="inPassword" name="password" required>
                <p class="error" id="inpasswordError"></p>

            </div>

            <button type="submit" class="btn">Login</button>
        </form>
        <p style="color: white;">Not yet premium?
            <a href="/premium" style="color: white;" id="signupPrompt">UPGRADE NOW!</a>
        </p>
    </div>
</div>
